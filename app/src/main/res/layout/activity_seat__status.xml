<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.droiddigger.transeatsearch.Seat_Status">

    <TextView
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="Alif Paribahan"/>

    <ImageView
        android:id="@+id/seat_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/seat_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seat_1"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_toLeftOf="@+id/seat_1"
        android:layout_toStartOf="@+id/seat_1"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/seat_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seat_2"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/seat_1"
        android:layout_toRightOf="@+id/seat_1"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/seat_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seat_2"
        android:layout_alignStart="@+id/seat_2"
        android:layout_below="@+id/seat_2"
        android:layout_marginTop="71dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/seat_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seat_4"
        android:layout_alignEnd="@+id/seat_3"
        android:layout_alignRight="@+id/seat_3"
        app:srcCompat="@mipmap/ic_launcher" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty Seat"
            android:padding="3dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:src="@drawable/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupied Seat"
            android:padding="3dp"/>
    </LinearLayout>
</RelativeLayout>
